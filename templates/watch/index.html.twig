{% extends 'base.html.twig' %}

{% block title %}Watch index{% endblock %}

{% block body %}
    <h1>Watch index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DisplayName</th>
                <th>Active</th>
                <th>Sale</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for watch in watches %}
            <tr>
                <td>{{ watch.id }}</td>
                <td>{{ watch.displayName }}</td>
                <td>{{ watch.active ? 'Yes' : 'No' }}</td>
                <td>{{ watch.sale ? 'Yes' : 'No' }}</td>
                <td>{{ watch.description }}</td>
                <td>{{ watch.price }}</td>
                <td>
                    <a href="{{ path('watch_show', {'id': watch.id}) }}">show</a>
                    <a href="{{ path('watch_edit', {'id': watch.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('watch_new') }}">Create new</a>
{% endblock %}
