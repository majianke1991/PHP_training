{% extends 'base.html.twig' %}

{% block title %}Watch{% endblock %}

{% block body %}
    <h1>Watch</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ watch.id }}</td>
            </tr>
            <tr>
                <th>DisplayName</th>
                <td>{{ watch.displayName }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ watch.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Sale</th>
                <td>{{ watch.sale ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ watch.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ watch.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('watch_index') }}">back to list</a>

    <a href="{{ path('watch_edit', {'id': watch.id}) }}">edit</a>

    {{ include('watch/_delete_form.html.twig') }}
{% endblock %}
